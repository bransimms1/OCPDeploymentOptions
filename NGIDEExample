    <script>
        const redhatColors = {
            red: '#EE0000',
            black: '#151515',
            darkGray: '#4f4f4f',
            midGray: '#8a8a8a',
            lightGray: '#d2d2d2'
        };
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        function wrapLabel(str, maxWidth) {
            if (str.length <= maxWidth) {
                return str;
            }
            const words = str.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + word).length > maxWidth && currentLine.length > 0) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            }
            lines.push(currentLine.trim());
            return lines;
        }

        const commonChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        color: redhatColors.darkGray,
                        font: { size: 14, family: 'Red Hat Text' }
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    },
                    backgroundColor: 'rgba(21, 21, 21, 0.9)',
                    titleFont: { size: 16, weight: 'bold', family: 'Red Hat Display' },
                    bodyFont: { size: 14, family: 'Red Hat Text' },
                    padding: 12,
                    cornerRadius: 8,
                    displayColors: false,
                }
            },
            animation: {
                duration: 1000,
                easing: 'easeOutQuart'
            }
        };

        const prosConsCtx = document.getElementById('prosConsChart').getContext('2d');
        new Chart(prosConsCtx, {
            type: 'bar',
            data: {
                labels: ['Scalability', 'Control', 'Cost Model', 'Data Sovereignty', 'Performance'],
                datasets: [
                    {
                        label: 'AWS Cloud',
                        data: [9, 5, 8, 6, 7],
                        backgroundColor: redhatColors.midGray,
                        borderColor: redhatColors.midGray,
                        borderWidth: 1
                    },
                    {
                        label: 'Dell On-Premises with Red Hat',
                        data: [6, 9, 7, 9, 9],
                        backgroundColor: redhatColors.red,
                        borderColor: redhatColors.red,
                        borderWidth: 1
                    }
                ]
            },
            options: { ...commonChartOptions,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#e0e0e0' },
                        ticks: { color: redhatColors.darkGray, font: { size: 12, family: 'Red Hat Text' } },
                        title: { display: true, text: 'Relative Strength Score', color: redhatColors.black, font: { size: 14, weight: 'bold', family: 'Red Hat Display' }}
                    },
                    x: {
                        grid: { display: false },
                        ticks: { color: redhatColors.darkGray, font: { size: 12, family: 'Red Hat Text' } }
                    }
                }
            }
        });

        const awsWorkloadCtx = document.getElementById('awsWorkloadChart').getContext('2d');
        new Chart(awsWorkloadCtx, {
            type: 'doughnut',
            data: {
                labels: ['Containerization Workloads'],
                datasets: [{
                    label: 'Workload Type',
                    data: [100],
                    backgroundColor: [redhatColors.darkGray],
                    hoverOffset: 4
                }]
            },
            options: { ...commonChartOptions, cutout: '60%' }
        });

        const dellWorkloadCtx = document.getElementById('dellWorkloadChart').getContext('2d');
        const dellWorkloadLabels = ['Containerization Workloads', wrapLabel('OpenShift Virtualization (VMs)', 16)];
        new Chart(dellWorkloadCtx, {
            type: 'doughnut',
            data: {
                labels: dellWorkloadLabels,
                datasets: [{
                    label: 'Workload Type',
                    data: [70, 30],
                    backgroundColor: [redhatColors.red, redhatColors.black],
                    hoverOffset: 4
                }]
            },
            options: { ...commonChartOptions, cutout: '60%' }
        });

        const modal = document.getElementById('aiModal');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const modalTitle = document.getElementById('modalTitle');
        const modalSpinner = document.getElementById('modalSpinner');
        const modalResult = document.getElementById('modalResult');

        function openModal() {
            modal.classList.remove('opacity-0', 'pointer-events-none');
            modal.querySelector('.modal-content').classList.remove('scale-95');
            modalSpinner.classList.remove('hidden');
            modalResult.classList.add('hidden');
        }

        function closeModal() {
            modal.classList.add('opacity-0', 'pointer-events-none');
            modal.querySelector('.modal-content').classList.add('scale-95');
        }

        closeModalBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });

        async function callGemini(prompt) {
            openModal();
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
            
            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ contents: [{ parts: [{ text: prompt }] }] })
                });

                if (!response.ok) {
                    throw new Error(`API call failed with status: ${response.status}`);
                }

                const result = await response.json();
                
                let text = 'No content generated.';
                if (result.candidates && result.candidates.length > 0 && result.candidates[0].content && result.candidates[0].content.parts && result.candidates[0].content.parts.length > 0) {
                    text = result.candidates[0].content.parts[0].text;
                }
                
                modalResult.innerHTML = text.replace(/\n/g, '<br>');
                modalSpinner.classList.add('hidden');
                modalResult.classList.remove('hidden');

            } catch (error) {
                console.error("Gemini API Error:", error);
                modalResult.innerHTML = `<p class="text-red-500"><strong>Error:</strong> Could not retrieve AI recommendation. Please check the console for details.</p>`;
                modalSpinner.classList.add('hidden');
                modalResult.classList.remove('hidden');
            }
        }

        document.getElementById('getRecommendationBtn').addEventListener('click', () => {
            const teamSize = document.getElementById('teamSize').value || 'unspecified';
            const workloadType = document.getElementById('workloadType').value || 'unspecified';
            const priorities = document.getElementById('priorities').value || 'unspecified';

            const prompt = `
                As an expert solutions architect for Red Hat, analyze the following project requirements for a company considering the NGIDE platform on Red Hat OpenShift. Provide a clear recommendation for either "AWS Cloud Infrastructure" or "Dell On-Premises Hardware".

                **Project Details:**
                - Team Size: ${teamSize}
                - Primary Workload: ${workloadType}
                - Key Priorities: ${priorities}

                **Context:**
                - **AWS Cloud Option:** Offers scalability, elasticity, and a pay-as-you-go model. It runs OpenShift Container Platform (OCP) using a core-based license and is best for containerized workloads.
                - **Dell On-Premises Option:** Offers maximum control, data sovereignty, and performance. It runs OCP on bare metal and uniquely supports OpenShift Virtualization, allowing both containers and traditional VMs (like Windows) to run on the same cluster.

                **Your Task:**
                1.  Start with a clear, bold recommendation: **Recommendation: [AWS Cloud Infrastructure or Dell On-Premises Hardware]**.
                2.  Write a "Reasoning" section explaining why you chose that option, directly referencing the user's provided project details and the strengths of the recommended platform.
                3.  Include a "Considerations" section with 2-3 bullet points highlighting factors the user should keep in mind with the recommended choice.
                Format the response in clean HTML using headings and paragraphs.
            `;
            
            modalTitle.textContent = 'AI Recommendation';
            callGemini(prompt);
        });

        document.getElementById('generateNextStepsBtn').addEventListener('click', () => {
            const prompt = `
                As a senior program manager specializing in enterprise platform adoption, expand on the following high-level next steps for implementing the NGIDE platform. Your goal is to provide a more detailed, actionable plan for Northrop Grumman.

                **High-Level Steps:**
                1.  Conduct a detailed workload assessment.
                2.  Perform a deep-dive Total Cost of Ownership (TCO) analysis.
                3.  Schedule a technical workshop on Red Hat OpenShift.
                4.  Begin architectural design discussions.

                **Your Task:**
                For each of the four steps, generate 3-4 specific, insightful bullet points that elaborate on what needs to be done. For example, for "workload assessment," you could suggest specific questions to ask stakeholders. For "TCO analysis," you could list hidden costs to consider.

                Format the response as a clean HTML ordered list (\`<ol>\`) with nested unordered lists (\`<ul>\`) for the bullet points.
            `;
            modalTitle.textContent = 'Detailed Next Steps';
            callGemini(prompt);
        });

